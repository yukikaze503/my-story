<div class="box">
  <h2>注册</h2>
  <% if flash[:error] %>
  <p class="error"><%= flash[:error] %></p>
  <% end %>
  <div class="account">
    <%= form_for @user do |f| %>
      <div class="form_item">
        <label>用户名：</label><%= f.text_field :nickname %>
      </div>
      <div class="form_item">
        <label>密码：</label><%= f.password_field :password %>
      </div>
      <p><%= f.submit "注册",class: 'submit' %></p>
    <% end %>
    <p><%= link_to "登录", login_path %></p>
  </div>
</div>
