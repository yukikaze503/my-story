<div class="form_wrapper">
  <%= form_for @story do |f| %>
    <div class="form_item">
      <label>故事图片</label>
      <%= f.file_field :avatar %>
    </div>
    <div class="form_item">
      <label>故事标题</label>
      <%= f.text_field :body, class: 'long-txt' %>
    </div>
    <div class="form_item">
      <label>故事正文</label>
      <%= f.text_field :body, type: 'hidden' %>
    </div>
    <div class="btn">
      <%= link_to "提交", redirect_to stories_path, class: 'btn_submit' %>
      <%= link_to "取消", stories_path, class: 'btn_cancel' %>
    </div>
  <% end %>
</div>
<script type="text/javascript">
var editor = new Simditor({
  textarea: $('#post_body'),
  toolbar: ['title', 'bold', 'italic', 'underline', 'color', '|', 'ol', 'ul', 'blockquote', 'code', 'table', 'link', '|','hr','indent','outdent','alignment','fullscreen'],
  placeholder: '写下你的故事...',
  pasteImage: false,
  fileKey: 'file',
});
</script>
