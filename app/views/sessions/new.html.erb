<div class="box">
  <h2>登录</h2>
  <% if flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
  <% end %>
  <div class="account">
    <%= form_tag login_path do |f| %>
      <div class="form_item">
        <%= text_field_tag 'nickname', nil, placeholder: '用户名' %>
      </div>
      <div class="form_item">
        <%= password_field_tag 'password', nil, placeholder: '密码' %>
      </div>
      <p><%= submit_tag "登录", class: 'submit' %></p>
    <% end %>
    <p><%= link_to "注册", signup_path %></p>
  </div>
</div>
